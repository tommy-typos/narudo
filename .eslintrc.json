{
	"extends": ["next/core-web-vitals", "plugin:drizzle/all", "plugin:@tanstack/eslint-plugin-query/recommended"],
	"plugins": ["drizzle"],
	"rules": {
		"drizzle/enforce-delete-with-where": [
			"error",
			{
				"drizzleObjectName": ["db"]
			}
		],
		"drizzle/enforce-update-with-where": [
			"error",
			{
				"drizzleObjectName": ["db"]
			}
		],
		"@next/next/no-img-element": "off"
	}
}
